//Main CSS

.row {
  width: 100%;
  margin: 0;
  padding: 0.5em 1em;
  font-family: 'Roboto', sans-serif;
  font-weight: normal;
  font-size: 15px;
}
.col-img {
  width: 20%;
  margin: 0;
  padding: 0 0.5em 0.5em 0;
}
.col-list {
  width: 80%;
  white-space: normal;
  word-wrap: break-word;
}
#heading {
/*.col-list div:nth-child(1) {*/
  font-size: 17px;
  font-weight:500;
  color:#00335E;
}
#blueText {
/*.col-list div:nth-child(2) {*/
  color:#4597da;
  padding: 0;
}
#grayText {
/*.col-list div:nth-child(3) {*/
  font-size: 14px;
  color: #919191;
  padding: 0; /*5px 0;*/
}
#date-ID {
  font-size: 14px;
  margin-left: -24%;
  margin-top: 2%;
}

//Details Page
.detailsLeft, .detailsRight {
  width: 45%;
  margin: 0;
  padding: 0;
  word-wrap: normal;
}
/*
#grayText.detailsRight {
